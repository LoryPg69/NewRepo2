@page
@model IndexModel
@{
    
    ViewData["Title"] = "Home page";
    // Layout = "Shared/_LayoutFluid.cshtml";
  
}

<div class="container-fluid dashboard">
    <h1 class="h2">Welcome to RazorBasic Coffee!</h1>
    <hr />
    <div class="row">
        @*Left Column*@
        <div class="col-md-6">
            <h2> Latest Survey Result</h2>
            <table class="table table-striped table-bordered">

                @foreach(var item in Model.SurveyResult)
                {

                    <tr>
                        <td>@item.Question</td>
                        <td>@item.Answer</td>
                    </tr>
                }
            </table>
        </div>
        @*Right Column*@
        <div class="col-md-6">

            <div class="card">
                <div class="card-header">
                    The Basic
                </div>   
                <div class="card-body">
                  
                    <p>Hello, today is @DateTime.Today.Date.ToString("MM/dd/yyyy").</p>
                    @{
                        var temperature = 55;
                    }
                    <p>The current temperature is @temperature degress.</p>
                    @if (temperature <80) {
                        <p>We raccomend a coat until it warms up    .</p>
                    }
                </div>
            <div class="card">
                <div class="card-header">
                    Request Help
                </div>
                <div class="card-body">
                    <h5 class="card-title">Contact our IT Team</h5>
                    <p class="card-text">Having an issue with the site? Let us know!</p>
                    <a asp-page="help" class="btn btn-success">Request Help</a>
                </div>
            </div>
        </div>
    </div>
</div>
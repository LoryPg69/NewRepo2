<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorBasic Coffee Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> @*crea un codice identificativo*@
    <link rel="stylesheet" href="~/WiredBrainCoffeeAdmin.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page">Dashboard</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Products
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                                    @* <li><a class="dropdown-item">View All</a></li>
                                    <li><a class="dropdown-item">Add New</a></li> *@
                                    <li><a class="dropdown-item" asp-page="/product/viewpiadine">ViewPiadine</a></li>
                                    <li><a class="dropdown-item" asp-page="/product/addpiadine">Add Piadine</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link disabled">Orders (Coming soon)</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link">Help</a>
                            </li>
                        </ul>
                    </div>
                    <a class="navbar-brand float-right">RazorBasic Coffee</a>
                </div>
            </nav>
        </header>
        <main>
            @RenderBody()
        </main>
        <footer>
            <div class="row">
                <div class="col-md-4">
                    <p>&copy; 2022 - RazorBasicCoffeeAdmin</p>
                    <img id="logo" src="~/images/wired-brain-coffee-logo.png" />
                </div>
                <div class="col-md-4">
                    <p>1234 RazorBasic Way</p>
                    <p>Awesome City, CA 55555</p>
                    <p>Phone: 555-123-4567</p>
                    <p>Fax: 555-123-4567</p>
                </div>
                <div class="col-md-4">
                    <div class="footer-pic">
                        @if (IsSectionDefined("RightFooter"))
                        {
                            @RenderSection("RightFooter")
                        }
                        else
                        {
                            <img src="~/images/menu/salad-house.png" />
                        }

                        @* <p>Picture content goes here.</p>
                        @{
                        var urlPath = Context.Request.Path;
                        }

                        @switch (urlPath.ToString().ToLower())
                        {
                        case"/":
                        <img src="~/images/menu/cake.png" />
                        break;
                        case "/product/addproduct":
                        <img src="~/images/menu/waffles.png" />
                        break;
                        case "/help":
                        <img src="~/images/menu/cappucino.png" />
                        break;


                        } *@
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>